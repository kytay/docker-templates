<?xml version="1.0"?>
<Container version="2">
  <Name>gitlab</Name>
  <Repository>gitlab/gitlab-ee:latest</Repository>
  <Registry>https://hub.docker.com/r/gitlab/gitlab-ee</Registry>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <Project>https://about.gitlab.com/stages-devops-lifecycle/</Project>
  <WebUI>http://[IP]:[PORT:80]/</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/kytay/docker-templates/master/gitlab.xml</TemplateURL>
  <Icon>https://about.gitlab.com/images/press/logo/png/gitlab-icon-rgb.png</Icon>
  <ExtraParams>--hostname hostname.local</ExtraParams>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort></HostPort>
        <ContainerPort>80</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
    <Publish>
      <Port>
        <HostPort></HostPort>
        <ContainerPort>443</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
    <Publish>
      <Port>
        <HostPort></HostPort>
        <ContainerPort>22</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir></HostDir>
      <ContainerDir>/etc/gitlab</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir></HostDir>
      <ContainerDir>/var/log/gitlab</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir></HostDir>
      <ContainerDir>/var/opt/gitlab</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>99</Value>
      <Name>PUID</Name>
    </Variable>
    <Variable>
      <Value>100</Value>
      <Name>PGID</Name>
    </Variable>
    <Variable>
      <Value>external_url "hostname.local"; pages_external_url "page.local"; gitlab_pages['enable'] = true; gitlab_pages['access_control'] = true; gitlab_rails['smtp_enable'] = true; gitlab_rails['smtp_address'] = "smtp"; gitlab_rails['smtp_port'] = 25;</Value>
      <Name>GITLAB_OMNIBUS_CONFIG</Name>
    </Variable>
  </Environment>
  <Config Name="GitLab Config" Target="/etc/gitlab" Default="" Mode="rw" Description="Container Path: /etc/gitlab" Type="Path" Display="always" Required="true" Mask="false"></Config>
  <Config Name="GitLab Logs" Target="/var/log/gitlab" Default="" Mode="rw" Description="Container Path: /var/log/gitlab" Type="Path" Display="always" Required="true" Mask="false"></Config>
  <Config Name="GitLab Data" Target="/var/opt/gitlab" Default="" Mode="rw" Description="Container Path: /var/opt/gitlab" Type="Path" Display="always" Required="true" Mask="false"></Config>
  <Config Name="GitLab HTTP Port" Target="80" Default="80" Description="Container Port 80" Type="Type" Mode="tcp" Display="always" Required="true"></Config>
  <Config Name="GitLab HTTPS Port" Target="443" Default="443" Description="Container Port 443" Type="Type" Mode="tcp" Display="always" Required="true"></Config>
  <Config Name="GitLab SSH Port" Target="22" Default="22" Description="Container Port 22" Type="Type" Mode="tcp" Display="always" Required="true"></Config>
  <Config Name="GitLab Omnibus Config" Target="GITLAB_OMNIBUS_CONFIG" Default="external_url 'hostname.local'; pages_external_url 'page.local'; gitlab_pages['enable'] = true; gitlab_pages['access_control'] = true; gitlab_rails['smtp_enable'] = true; gitlab_rails['smtp_address'] = 'smtp'; gitlab_rails['smtp_port'] = 25;" Description="Configuration for Omnibus" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="PUID" Target="PUID" Default="99" Description="User ID" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="PGID" Target="PUID" Default="100" Description="Group ID" Type="Variable" Display="always" Required="true" Mask="false"></Config>
</Container>
